{
  "version": "0.2.0",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build && yarn build-tailwind",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint",
    "prepare": "yarn build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "storybook": "storybook dev",
    "build-storybook": "storybook build",
    "build-tailwind": "NODE_ENV=production npx tailwindcss -o ./dist/tailwind.css --minify",
    "deploy:major": "npm version $(semver $npm_package_version -i major) && npm publish --tag latest",
    "deploy:minor": "git add . && git commit -am 'Bump version to $(semver $npm_package_version -i minor)' && npm version $(semver $npm_package_version -i minor) && npm publish --tag latest",
    "deploy:patch": "npm version $(semver $npm_package_version -i patch) && npm publish --tag latest"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "@claudiolins-dev/claudiolins-lib",
  "author": "Claudio Lins",
  "module": "dist/claudiolins-lib.esm.js",
  "size-limit": [
    {
      "path": "dist/claudiolins-lib.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/claudiolins-lib.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@babel/core": "^7.22.5",
    "@size-limit/preset-small-lib": "^8.2.4",
    "@storybook/addon-essentials": "^7.0.21",
    "@storybook/addon-info": "^5.3.21",
    "@storybook/addon-links": "^7.0.21",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/addons": "^7.0.21",
    "@storybook/cli": "^7.0.21",
    "@storybook/nextjs": "^7.0.21",
    "@storybook/react": "^7.0.21",
    "@types/react": "^18.2.12",
    "@types/react-dom": "^18.2.5",
    "autoprefixer": "^10.4.14",
    "babel-loader": "^9.1.2",
    "husky": "^8.0.3",
    "postcss": "^8.4.24",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-is": "^18.2.0",
    "size-limit": "^8.2.4",
    "storybook": "^7.0.21",
    "tailwindcss": "^3.3.2",
    "tsdx": "^0.14.1",
    "tslib": "^2.5.3",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "semver": "^7.5.2"
  }
}
